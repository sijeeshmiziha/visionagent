{
  "name": "visionagent",
  "version": "0.0.1",
  "description": "Multi-provider AI agent framework with vision, tool calling, and MCP support",
  "author": {
    "name": "sijeeshmiziha",
    "email": "sijeeshmonbalan@gmail.com",
    "url": "https://github.com/sijeeshmiziha"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sijeeshmiziha/visionagent.git"
  },
  "homepage": "https://github.com/sijeeshmiziha/visionagent",
  "bugs": {
    "url": "https://github.com/sijeeshmiziha/visionagent/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run typecheck && npm run lint && tsup",
    "dev": "tsup --watch",
    "test": "vitest run tests/unit tests/tools tests/core",
    "test:unit": "vitest run tests/unit tests/tools tests/core",
    "test:integration": "vitest run tests/integration",
    "test:all": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "example:01": "tsx --env-file=.env examples/01-basic-model.ts",
    "example:02": "tsx --env-file=.env examples/02-all-providers.ts",
    "example:03": "tsx --env-file=.env examples/03-tool-calling.ts",
    "example:06": "tsx --env-file=.env examples/06-agent-with-multiple-tools.ts",
    "example:07": "tsx --env-file=.env examples/07-mcp-server.ts",
    "example:09": "tsx --env-file=.env examples/09-hello-world.ts",
    "example:10": "tsx --env-file=.env examples/10-hello-world-mcp.ts",
    "example:all": "npm run example:01 && npm run example:02 && npm run example:03 && npm run example:06 && npm run example:07 && npm run example:09",
    "tokens": "tsx .scripts/token-calculator.ts",
    "tokens:verbose": "tsx .scripts/token-calculator.ts --verbose",
    "tokens:json": "tsx .scripts/token-calculator.ts --json",
    "ci": "npm run typecheck && npm run lint && npm run test:unit && npm run build",
    "prepublishOnly": "npm run ci",
    "prepare": "husky"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "figma",
    "requirements",
    "ai",
    "vision",
    "product",
    "mcp",
    "agents",
    "tools",
    "langchain"
  ],
  "license": "MIT",
  "dependencies": {
    "@langchain/anthropic": "^1.3.14",
    "@langchain/google-genai": "^2.1.15",
    "@langchain/openai": "^1.2.4",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
